<div class="navbar-spacer"></div>

<div class="sign-up-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-8 session-form">
        <div class="row">
          <h2 style="margin-left: 2em">Sign up</h2>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.hidden_field :admin, value: false %>
        <%= f.hidden_field :superuser, value: false %>
        <div class="row">
          <div class="col-md-6">
            <%= devise_error_messages! %>
            <div>
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, autofocus: true %>
            </div>

            <div>
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name %>
            </div>

            <div>
              <%= f.label :email %><br />
              <%= f.email_field :email %>
            </div>
          </div>

          <div class="col-md-6">
            <div>
              <%= f.label :password %><br />
              <%= f.password_field :password %>
            </div>

            <div>
              <%= f.submit "Sign up", id:"submit", class: "btn btn-lg btn-danger"%>
            </div>
            <% end %>

          </div>

          </div>
          <div class="row" id="devise-links">
            <hr>
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div><!-- sign-up-bg -->
</div>

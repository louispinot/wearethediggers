<div class="navbar-spacer"></div><!-- navbar-spacer -->

<div class="sign-up-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 session-form">
          <h2>SIGN UP</h2>
          <div class="col-md-6">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
             <%= f.hidden_field :admin, value: false %>
             <%= f.hidden_field :superuser, value: false %>

              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.label :first_name, class: "control-label" %>
                <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :last_name, class: "control-label" %>
                <%= f.text_field :last_name, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :email, class: "control-label" %>
                <%= f.email_field :email, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password, class: "control-label" %>
                <%= f.password_field :password, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.submit "Sign up", id:"submit", class: "btn btn-lg btn-warning"%>
              </div>
            <% end %>

            <div id="devise-links">
              <hr>
              <%= render "devise/shared/links" %>
            </div><!-- devise-links -->
          </div>

        </div><!-- col-md-8 col-md-offset-2 session-form -->
    </div><!-- row -->
  </div><!-- container -->
</div><!-- sign-up-bg -->